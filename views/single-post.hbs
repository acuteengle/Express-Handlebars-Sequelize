<article class="post">
  <div class="title">
    <h2>{{post.post_title}}</h2>
  </div>
  <div class="meta">
    <span>Created by {{post.user.username}} on {{format_date post.createdAt}}</span>
  </div>
  <div class="post-body">
    <p>{{post.post_body}}</p>
  </div>
</article>

<h3>{{post.comments.length}} comment(s)</h3>
{{#if username}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>
  <div>
    <button type="submit">Add Comment</button>
  </div>
</form>
{{/if}}

{{> comments post.comments}}

{{#if username}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>
{{/if}}