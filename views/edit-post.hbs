<article>
  <a href="/dashboard"> &larr; Back to Dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <input id="post-id" type="hidden" value="{{post.id}}" />
      <label for="post-title">Title</label>
      <input id="post-title" type="text" value="{{post.post_title}}" />
      <label for="post-body">Body</label>
      <textarea id="post-body">{{post.post_body}}</textarea>
    </div>
    <div>
      <span>Created by {{post.user.username}} on {{format_date post.createdAt}} | {{post.comments.length}}
        {{format_plural "comment" post.comments.length}}</span>
    </div>
    <button type="submit">Save Post</button>
    <button type="button" class="delete-post-btn">Delete Post</button>
  </form>
</article>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>